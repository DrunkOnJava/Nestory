# Auto detect text files and normalize line endings to LF
* text=auto

# Swift source files
*.swift text diff=swift
*.h text diff=objc
*.m text diff=objc

# Explicitly declare text files
*.md text
*.txt text
*.json text
*.yml text
*.yaml text
*.xml text
*.plist text
*.strings text
*.pbxproj text
*.xcconfig text
*.storyboard text
*.xib text

# Declare files that will always have LF line endings
*.sh text eol=lf
Makefile text eol=lf

# Declare files that will always have CRLF line endings
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.tgz binary
*.jar binary
*.dylib binary
*.a binary
*.framework binary
*.xcframework binary

# Diff settings
*.pbxproj merge=union
*.strings merge=union

# Large files
*.sketch filter=lfs diff=lfs merge=lfs -text
*.fig filter=lfs diff=lfs merge=lfs -text
*.psd filter=lfs diff=lfs merge=lfs -text
*.ai filter=lfs diff=lfs merge=lfs -text

# Documentation
docs/ linguist-documentation
*.md linguist-documentation

# Vendored
Pods/ linguist-vendored
Carthage/ linguist-vendored
.build/ linguist-vendored

# Generated
*.generated.swift linguist-generated
*_Generated.swift linguist-generated