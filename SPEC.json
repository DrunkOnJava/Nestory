{
  "app": "Nestory",
  "teamId": "2VXBQV4XC9",
  "bundleIds": {
    "dev": "com.drunkonjava.nestory.dev",
    "staging": "com.drunkonjava.nestory.staging",
    "prod": "com.drunkonjava.nestory"
  },
  "minOS": "17.0",
  "language": "Swift 6",
  "state": "TCA",
  "persistence": "SwiftData", 
  "sync": "CloudKit",
  "layers": ["App", "Features", "UI", "Services", "Infrastructure", "Foundation"],
  "features": ["Inventory", "Analytics", "Settings", "Search", "Capture", "Warranty", "Insurance", "Apple-Frameworks"],
  "allowedImports": {
    "App": ["Features", "UI", "Services", "Infrastructure", "Foundation", "ComposableArchitecture"],
    "Features/*": ["UI", "Services", "Foundation", "ComposableArchitecture"],
    "UI/*": ["Foundation"],
    "Services/*": ["Infrastructure", "Foundation"],
    "Infrastructure/*": ["Foundation"],
    "Foundation/*": []
  },
  "slo": {
    "coldStartP95Ms": 1800,
    "dbRead50P95Ms": 250,
    "scrollJankPctMax": 3,
    "crashFreeMin": 99.8
  },
  "ci": {
    "coverageMin": 0.80,
    "perfBudgetEnforced": true,
    "archTestEnforced": true,
    "spmPinned": true,
    "specGuard": true
  },
  "policy": {
    "banTrackingSDKs": true,
    "requireADRForNewDeps": true,
    "precommitHooks": true
  },
  "credentials": {
    "pattern": "Environment",
    "required": ["CLOUDKIT_CONTAINER", "FX_API_KEY"],
    "optional": ["BARCODE_API_KEY", "OCR_SERVICE_KEY"],
    "fallback": "GracefulDegradation"
  },
  "schemaPolicy": {
    "cloudKitMode": "development",
    "migrationStrategy": "progressive",
    "rollbackSupported": true
  },
  "session": {
    "startProtocol": ["read SPEC.json", "run nestoryctl arch-verify", "set focus in PROJECT_CONTEXT.md"],
    "checkpointProtocol": ["swift build", "swift test", "nestoryctl check"],
    "endProtocol": ["update PROJECT_CONTEXT.md", "update DECISIONS.md", "commit"]
  }
}