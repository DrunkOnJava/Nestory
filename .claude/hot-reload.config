# Nestory Hot Reload Configuration
# This config allows testing both InjectionNext and Claude's direct reload

# App configuration
APP_NAME="Nestory"
PROJECT_DIR="/Users/griffin/projects/Nestory"

# Reload mode options:
# - direct: Use Claude's direct Swift compilation (no Xcode needed)
# - injection: Use existing InjectionNext setup
# - both: Run both methods for performance comparison
RELOAD_MODE="direct"

# Enable hot reload
ENABLE_HOT_RELOAD=true

# Swift compiler optimization
SWIFT_OPTIMIZATION="-O"  # -Onone for debug, -O for optimized

# Cache compiled modules for faster reloads
CACHE_MODULES=true

# Verbose logging for debugging
VERBOSE=false