// Dev.xcconfig
#include "Base.xcconfig"

// Development-Specific Overrides
PRODUCT_BUNDLE_IDENTIFIER = com.nestory.app.dev
PRODUCT_NAME = Nestory Dev

// Swift Compilation
SWIFT_ACTIVE_COMPILATION_CONDITIONS = DEBUG DEV_ENVIRONMENT
GCC_PREPROCESSOR_DEFINITIONS = DEBUG=1 DEV_ENVIRONMENT=1
SWIFT_OPTIMIZATION_LEVEL = -Onone

// Build Configuration
ENABLE_TESTABILITY = YES
ONLY_ACTIVE_ARCH = YES
DEBUG_INFORMATION_FORMAT = dwarf
COPY_PHASE_STRIP = NO
ENABLE_NS_ASSERTIONS = YES
ENABLE_DEBUG_DYLIB = YES
MTL_ENABLE_DEBUG_INFO = INCLUDE_SOURCE
GCC_OPTIMIZATION_LEVEL = 0

// CloudKit
CLOUDKIT_ENVIRONMENT = Development
CLOUDKIT_CONTAINER = iCloud.com.nestory.app.dev

// API Configuration
API_BASE_URL = https://api-dev.nestory.app
FX_API_ENDPOINT = https://fx-dev.nestory.app

// Feature Flags (Development-specific)
ENABLE_ANALYTICS = NO
ENABLE_CRASH_REPORTING = NO
ENABLE_DEBUG_MENU = YES
ENABLE_REMOTE_CONFIG = NO
FF_ALL_FEATURES = YES

// Performance & Debug Tools
ENABLE_PERFORMANCE_LOGGING = YES
ENABLE_MEMORY_DEBUGGING = YES
ENABLE_THREAD_SANITIZER = NO
ENABLE_ADDRESS_SANITIZER = NO