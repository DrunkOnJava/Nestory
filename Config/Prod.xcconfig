// Prod.xcconfig
#include "Base.xcconfig"

// Production-Specific Overrides
PRODUCT_BUNDLE_IDENTIFIER = com.nestory.app
PRODUCT_NAME = Nestory

// Code Signing (Production)
CODE_SIGN_STYLE = Manual
CODE_SIGN_IDENTITY = Apple Distribution
PROVISIONING_PROFILE_SPECIFIER = Nestory App Store

// Swift Compilation
SWIFT_ACTIVE_COMPILATION_CONDITIONS = RELEASE PROD_ENVIRONMENT
GCC_PREPROCESSOR_DEFINITIONS = RELEASE_ENVIRONMENT=1 PROD_ENVIRONMENT=1 NDEBUG=1
SWIFT_OPTIMIZATION_LEVEL = -Owholemodule
SWIFT_COMPILATION_MODE = wholemodule

// Build Configuration
ENABLE_TESTABILITY = NO
ONLY_ACTIVE_ARCH = NO
DEBUG_INFORMATION_FORMAT = dwarf-with-dsym
COPY_PHASE_STRIP = YES
ENABLE_NS_ASSERTIONS = NO
VALIDATE_PRODUCT = YES
GCC_OPTIMIZATION_LEVEL = s
MTL_ENABLE_DEBUG_INFO = NO

// CloudKit
CLOUDKIT_ENVIRONMENT = Production
CLOUDKIT_CONTAINER = iCloud.com.nestory.app

// API Configuration
API_BASE_URL = https://api.nestory.app
FX_API_ENDPOINT = https://fx.nestory.app

// Feature Flags (Production)
ENABLE_ANALYTICS = YES
ENABLE_CRASH_REPORTING = YES
ENABLE_DEBUG_MENU = NO
ENABLE_REMOTE_CONFIG = YES
FF_ALL_FEATURES = NO

// App Store Optimizations
ENABLE_BITCODE = NO
STRIP_INSTALLED_PRODUCT = YES
DEAD_CODE_STRIPPING = YES
STRIP_SWIFT_SYMBOLS = YES