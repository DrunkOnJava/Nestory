# Snapfile - Configuration for automated screenshot capture

# A list of devices you want to take the screenshots from
devices([
  "iPhone 16 Pro Max",      # 6.9" Display
  "iPhone 16 Pro",          # 6.3" Display  
  "iPhone 15",              # 6.1" Display
  "iPad Pro (13-inch) (M4)", # 13" Display
  "iPad Pro (11-inch) (M4)"  # 11" Display
])

# Languages to capture
languages([
  "en-US"
])

# The name of the scheme which contains the UI Tests
scheme("Nestory-Dev")

# Where should the resulting screenshots be stored?
output_directory("./fastlane/screenshots")

# Clear previous screenshots
clear_previous_screenshots(true)

# Reinstall app before running tests
reinstall_app(true)

# Stop after first error
stop_after_first_error(false)

# Dark mode
# override_status_bar(true)

# Arguments to pass to the app on launch
launch_arguments([
  "-UITestMode YES",
  "-SeedDataForScreenshots YES"
])

# For more information about all available options run
# fastlane action snapshot